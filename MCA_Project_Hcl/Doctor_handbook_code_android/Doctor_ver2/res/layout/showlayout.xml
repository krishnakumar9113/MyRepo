<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
	android:layout_height="fill_parent"  
	 android:layout_gravity="right" android:layout_width="fill_parent" >
	                          <TextView android:id="@+id/patientid" android:layout_height="wrap_content" android:text="patientid"  android:layout_marginTop="30dp" android:textSize="25dp"  android:layout_width="match_parent"/>
	                         <TextView android:layout_width="match_parent"  android:textSize="25dp" android:id="@+id/patientname" android:text="patientname" android:layout_marginTop="30dp" android:layout_height="wrap_content"/>
	                         <TextView android:id="@+id/date" android:text="date"   android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_marginTop="30dp" android:textSize="25dp"/>
	                         <TextView android:layout_width="match_parent"  android:textSize="25dp" android:id="@+id/disease" android:text="disease" android:layout_marginTop="30dp" android:layout_height="wrap_content" />
	                         <TextView android:id="@+id/prescription"   android:layout_height="wrap_content" android:text="prescription" android:layout_width="match_parent" android:layout_marginTop="30dp" android:textSize="25dp"/>




</LinearLayout>
